{
  "name": "setting-up-an-open-source-repo",
  "version": "0.1.0",
  "description": "Professionalizing and standardizing the way of working with (open source) repositories",
  "author": "nidkil <info@nidkil.com>",
  "license": "MIT",
  "keywords": [
    "open source",
    "repository",
    "github",
    "professional software development",
    "software best practices",
    "javascript",
    "node",
    "npm",
    "babel",
    "commitizen",
    "commitlint",
    "docsify",
    "eslint",
    "jest",
    "jsdoc",
    "prettie",
    "release-it"
  ],
  "directories": {
    "doc": "docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nidkil/setting-up-an-open-source-repo.git"
  },
  "bugs": {
    "url": "https://github.com/nidkil/setting-up-an-open-source-repo/issues"
  },
  "homepage": "https://github.com/nidkil/setting-up-an-open-source-repo#readme",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "cz:commit": "git cz",
    "cz:retry": "git cz --retry",
    "commitlint": "commitlint",
    "commitlint:last": "commitlint --edit",
    "git:first": "git rev-list HEAD | tail -n 1",
    "git:last": "git rev-list HEAD | head -n 1",
    "docs": "docsify serve docs",
    "release": "nodenv --env ./.env.local --exec release-it --verbose"
  },
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^1.2.0",
    "release-it": "^8.3.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
